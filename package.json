{
  "private": true,
  "scripts": {
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.ts\" --cache",
    "test": "jest",
    "build:copy": "shx mkdir -p lib && shx cp src/*.{bat,cmd,sh} lib/",
